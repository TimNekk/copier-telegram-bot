from __future__ import annotations

from typing import TYPE_CHECKING

from sqlalchemy import exists, select

{% if cd -%}
from bot.cache.redis import build_key, cached, clear_cache
{% endif -%}
from bot.database.models import UserModel
from bot.services import errors

if TYPE_CHECKING:
    from sqlalchemy.ext.asyncio import AsyncSession


{% if cd -%}
@cached(key_builder=lambda session, user_id: build_key(user_id))
{% endif -%}
async def user_exists(
    session: AsyncSession,
    user_id: int,
) -> bool:
    """Check if a user exists."""
    query = select(exists().where(UserModel.id == user_id))
    result = await session.scalar(query)
    return bool(result)


{% if cd -%}
@cached(key_builder=lambda session, user_id: build_key(user_id))
{% endif -%}
async def get_user(
    session: AsyncSession,
    user_id: int,
) -> UserModel | None:
    """Get a user by their Telegram ID."""
    return await session.get(UserModel, user_id)


async def create_user(
    session: AsyncSession,
    user_id: int,
    username: str | None,
    first_name: str | None,
    last_name: str | None,
{%- if deep_link %}
    deep_link: str | None,
{%- endif %}
) -> UserModel:
    """Create a new user."""
    new_user = UserModel(
        id=user_id,
        username=username,
        first_name=first_name,
        last_name=last_name,
{%- if deep_link %}
        deep_link=deep_link,
{%- endif %}
    )

    session.add(new_user)
    await session.flush()
{%- if cd %}
    await clear_cache(user_exists, user_id)
    await clear_cache(get_user, user_id)
{%- endif %}

    return new_user
{%- if has_blocked_bot %}


async def set_has_blocked_bot(
    session: AsyncSession,
    user_id: int,
    *,
    has_blocked_bot: bool,
) -> None:
    """Set has_blocked_bot flag for a user.

    Raises:
        UserNotFoundError: If user not found.

    """
    user = await get_user(session, user_id)

    if user is None:
        msg = f"user {user_id} not found"
        raise errors.UserNotFoundError(msg)

    if user.has_blocked_bot == has_blocked_bot:
        return

    user.has_blocked_bot = has_blocked_bot
    await session.flush()
{%- if cd %}
    await clear_cache(get_user, user_id)
{%- endif %}
{%- endif %}
